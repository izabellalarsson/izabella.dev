---
import BaseLayout from "../layouts/BaseLayout.astro";
import Post from '../components/Post.astro';
import "../styles/global.css";

const allPosts = await Astro.glob("../pages/writing/*.md");
const pageTitle = "Writing";

---

<BaseLayout pageTitle={pageTitle}>
  <p>This is where I will post about my journey learning Astro.</p>
  <ul>
    {allPosts.sort((a, b) => new Date(b.frontmatter.pubDate) - new Date(a.frontmatter.pubDate))
      .map((post) => <Post url={post.url} title={post.frontmatter.title} />)}
  </ul>
</BaseLayout>
